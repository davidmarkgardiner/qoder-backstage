{
  "name": "idp-frontend",
  "version": "1.0.0",
  "description": "Internal Developer Platform Frontend for AKS Cluster Onboarding",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "@mui/material": "^5.14.15",
    "@mui/icons-material": "^5.14.15",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@reduxjs/toolkit": "^1.9.7",
    "react-redux": "^8.1.3",
    "axios": "^1.6.0",
    "react-router-dom": "^6.17.0",
    "@mui/x-data-grid": "^6.17.0",
    "@uiw/react-json-view": "^1.6.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:headless": "cypress run --headless",
    "test:e2e": "./cypress/scripts/run-e2e-tests.sh --type smoke",
    "test:e2e:smoke": "./cypress/scripts/run-e2e-tests.sh --type smoke --headless",
    "test:e2e:dry-run": "./cypress/scripts/run-e2e-tests.sh --type dry-run --headless",
    "test:e2e:production": "./cypress/scripts/run-e2e-tests.sh --type production --headless",
    "test:e2e:interactive": "./cypress/scripts/run-e2e-tests.sh --type smoke --interactive",
    "test:e2e:debug": "./cypress/scripts/run-e2e-tests.sh --type dry-run --interactive --verbose",
    "test:e2e:full": "npm run test:e2e:smoke && npm run test:e2e:dry-run",
    "test:e2e:all": "npm run test:e2e:smoke && npm run test:e2e:dry-run && npm run test:e2e:production",
    "test:e2e:parallel": "./cypress/scripts/run-e2e-tests.sh --type smoke --parallel 3",
    "test:e2e:cleanup": "node cypress/scripts/cleanup-azure-resources.js --force",
    "test:e2e:cleanup:dry-run": "node cypress/scripts/cleanup-azure-resources.js --dry-run",
    "test:azure:validate": "node cypress/scripts/validate-azure-resources.js",
    "test:setup": "concurrently \"cd ../backend && npm start\" \"npm start\" --kill-others-on-fail",
    "test:ci": "start-server-and-test test:setup http-get://localhost:3000 test:e2e:headless"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "cypress": "^13.6.0",
    "cypress-real-events": "^1.11.0",
    "@cypress/grep": "^4.0.1",
    "start-server-and-test": "^2.0.3",
    "wait-on": "^7.2.0",
    "concurrently": "^8.2.2"
  }
}